CREATE TABLE recursos ( nombre varchar (140) NOT NULL, fechaalta date not null, fechabaja date not null, seccion varchar(60) References secciones(nombre), urlImagen varchar(150) not null, descripcion varchar(600) DEFAULT NULL, resumen varchar(700) not null, PRIMARY KEY(nombre), FOREIGN KEY(seccion) REFERENCES secciones(nombre) ON DELETE CASCADE ON UPDATE CASCADE);

