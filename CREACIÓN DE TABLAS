CREATE TABLE secciones ( nombre varchar(60) NOT NULL, fechaalta date NOT NULL, fechabaja date NOT NULL, descripcion varchar(400) not null, nombrebd varchar(20) not null, PRIMARY KEY(nombre), FOREIGN KEY(nombrebd) REFERENCES bd1(nombre,nombrebd) ON DELETE CASCADE ON UPDATE CASCADE);

